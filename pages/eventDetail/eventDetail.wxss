/* pages/eventDetail/eventDetail.wxss */

.flex-wrp-row {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.flex-wrp-col {
  display: flex;
  flex-direction: column;
}

.background {
  width: 100%;
  height: 100%;
  position:fixed;
  background-size:100% 100%;
  z-index: -1;
}

.section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.day {
  background: rgba(255, 255, 255, 0.7);
  border: 0rpx solid black;
  border-radius: 20rpx;
  margin: 10rpx 10rpx;
  box-shadow: 0 12rpx 16rpx 0 rgba(0,0,0,0.24), 0 17rpx 50rpx 0 rgba(0,0,0,0.19);
}

.pt-20 {
  margin-top: 20rpx;
}

.pb-20 {
  margin-bottom: 20rpx;
}

.pt-100 {
  margin-top: 100rpx;
}

.num-of-day {
  font-size: 10rem;
  font-weight: lighter;
  font-family: 'Impact';
  margin-left: 80rpx;
  margin-right: 80rpx;
}

.pad {
  background-image: linear-gradient(to bottom, #0acffe 0%, #2f44ff 100%);
  padding: 40rpx;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
}

.header {
  font-weight: 600;
  color: white;
}

.calendar {
  width: 600rpx;
}

.button {
  background-image: linear-gradient(to top, #dad4ec 0%, #dad4ec 1%, #f3e7e9 100%);
  width: 300rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin: 10rpx;
  justify-content: center;
  align-items: center;
}

.button-hover {
  background-color: #CDDCDC;
  background-image: radial-gradient(at 50% 100%, rgba(255,255,255,0.50) 0%, rgba(0,0,0,0.50) 100%), linear-gradient(to bottom, rgba(255,255,255,0.25) 0%, rgba(0,0,0,0.25) 100%);
  background-blend-mode: screen, overlay;
}

.button-text {
  font-weight: bolder;
}

.header-input {
  font-weight: 600;
  color: white;
  width: fit-content;
  text-align: left;
}