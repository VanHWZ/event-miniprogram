/* pages/main/main.wxss */
.flex-wrp-row {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.flex-wrp-col {
  display: flex;
  flex-direction: column;
}

.top-border {
  margin: 5% 1% 3% 1%;
  background-color: rgba(255, 255, 255, 0.6);
}

.top {
  margin: 10rpx;
  background-color: rgba(255, 255, 255, 0.6);
  box-shadow: 0 12rpx 16rpx 0 rgba(0,0,0,0.24), 0 17rpx 50rpx 0 rgba(0,0,0,0.19);
  justify-content: flex-start;
}

.flex-10 {
  flex: 10;
}

.flex-2 {
  flex: 2;
}

.flex-1 {
  flex: 1;
}

.top-content {
  margin: 10rpx 0rpx 0rpx 15rpx;
}

.font-top-content {
  font-size: large;
  font-weight: 550;
}

.top-time {
  margin: 0rpx 0rpx 10rpx 15rpx;
}

.font-top-time {
  font-size: small;
  color: rgb(85, 85, 85);
  font-weight: 500;
}

.top-num-of-days {
  justify-content: center;
}

.font-top-num-of-days {
  font-size: 80rpx;
  font-weight: 700;
}

.top-unit {
  justify-content: start;
  margin-top: 15rpx;
}

.font-top-unit {
  font-size: 30rpx;
  font-weight: 550;
  color: rgb(85, 85, 85);
}

.event-list {
  justify-content: center;
  align-items: center;
}

.event {
  display: flex;
  flex-direction: row;
  background-image: linear-gradient(to top, #e6e9f0 0%, #eef1f5 100%);
  /* border: 2rpx solid black; */
  margin: 20rpx 2% 20rpx 2%;
  border-radius: 12rpx;
  box-shadow: 0 12rpx 16rpx 0 rgba(0,0,0,0.24), 0 17rpx 50rpx 0 rgba(0,0,0,0.19);
  width: 96%;
}

.content {
  padding: 20rpx 0rpx 0rpx 15rpx;
  display: flex;
  vertical-align: middle;
}

.font-content {
  font-size: 30rpx;
  font-weight: 520;
}

.item-left {
  flex: 2; /* 重要 */
}

.item-right {
  flex: 1;
}

.background {
  width: 100%;
  height: 100%;
  position:fixed;
  background-size:100% 100%;
  z-index: -1;
}

.pad-num-of-days {
  padding: 10rpx;
  border-radius: 5rpx 0rpx 0rpx 5rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  vertical-align: middle;
}

.pad-num-of-days-future {
  background-image: linear-gradient(to top, #4481eb 0%, #04befe 100%);
}

.pad-num-of-days-past {
  background-image: linear-gradient(to top, #f8a100 0%, #fad000 100%);
}

.font-num-of-days {
  color: white;
  font-weight: bold;
  font-size: 40rpx;
}

.pad-unit {
  padding: 15rpx 10rpx 6rpx 10rpx;
  height: 60rpx;
  border-radius: 0rpx 10rpx 10rpx 0rpx;
  display: flex;
  justify-content: center;
  vertical-align: middle;
  align-content: center;
}

.pad-unit-future {
  background-image: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.pad-unit-past {
  background-image: linear-gradient(to top, #f87800 0%, #f97123ea 100%);
}

.font-unit {
  color: white;
  font-weight: 500;
  font-size: 35rpx;
}

.button {
  background-image: linear-gradient(to top, #dad4ec 0%, #dad4ec 1%, #f3e7e9 100%);
  width: 100rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin: 10rpx;
  justify-content: center;
  align-items: center;
}

.button-hover {
  background-color: #CDDCDC;
  background-image: radial-gradient(at 50% 100%, rgba(255,255,255,0.50) 0%, rgba(0,0,0,0.50) 100%), linear-gradient(to bottom, rgba(255,255,255,0.25) 0%, rgba(0,0,0,0.25) 100%);
  background-blend-mode: screen, overlay;
}

.button-text {
  font-weight: bolder;
  font-size: 30rpx;
}