/* pages/main/main.wxss */
.flex-wrp-row {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.flex-wrp-col {
  display: flex;
  flex-direction: column;
}

.event-list {
  justify-content: center;
  align-items: center;
}

.event {
  display: flex;
  flex-direction: row;
  background-image: linear-gradient(to top, #e6e9f0 0%, #eef1f5 100%);
  /* border: 2rpx solid black; */
  margin: 10rpx;
  border-radius: 10rpx;
  box-shadow: 0 12rpx 16rpx 0 rgba(0,0,0,0.24), 0 17rpx 50rpx 0 rgba(0,0,0,0.19);
  width: 725rpx;
}

.content {
  width: 580rpx;
  padding: 20rpx 0rpx 0rpx 15rpx;
  display: flex;
  vertical-align: middle;
}

.font-content {
  font-size: 30rpx;
}

.item-left {
  flex: 1; /* 重要 */
  align-items: center;
}

.item-right {
  flex: relative;
  align-items: center;
}

.background {
  width: 100%;
  height: 100%;
  position:fixed;
  background-size:100% 100%;
  z-index: -1;
}

.pad-num-of-days {
  background-image: linear-gradient(to top, #4481eb 0%, #04befe 100%);
  padding: 10rpx;
  border-radius: 5rpx 0rpx 0rpx 5rpx;
  height: 60rpx;
  width: 100rpx;
  display: flex;
  justify-content: center;
  vertical-align: middle;
}

.font-num-of-days {
  color: white;
  font-weight: bold;
  font-size: 40rpx;
}

.pad-unit {
  background-image: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 15rpx 10rpx 6rpx 10rpx;
  height: 60rpx;
  width: 70rpx;
  border-radius: 0rpx 10rpx 10rpx 0rpx;
  display: flex;
  justify-content: center;
  vertical-align: middle;
  align-content: center;
}

.font-unit {
  color: white;
  font-weight: 500;
  font-size: 35rpx;
}
