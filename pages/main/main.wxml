<!--pages/main/main.wxml-->

<view>
  <image class='background' src="cloud://mini-prd-1g478uj7eef9a54f.6d69-mini-prd-1g478uj7eef9a54f-1306410776/floor.jpg" mode="aspectFill"></image>
  <view class="flex-wrp-col">
    <view>顶置事件</view>
    <view class="flex-wrp-row">
      <view class="item-left">切换</view>
      <view class="item-right">添加</view>
    </view>
    <view wx:for="{{events}}" wx:key="key" class="event" bindtap="enterEventDetail" data-eid="{{item.eid}}">
      <view class="content">
        <text class="font-content">{{item.content}} {{item.prefix}}</text>
      </view>
      <view class="pad-num-of-days">
        <text class="font-num-of-days">{{item.days}}</text>
      </view> 
      <view class="pad-unit">
        <text class="font-unit">天</text>
      </view> 
    </view>
  </view>
</view>